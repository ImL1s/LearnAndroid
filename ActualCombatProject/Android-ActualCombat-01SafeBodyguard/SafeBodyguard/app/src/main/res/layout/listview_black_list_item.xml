<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_view_black_list_item_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="電話"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/list_view_black_list_item_tv_mode"
        android:layout_marginTop="2dp"
        android:layout_below="@id/list_view_black_list_item_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模式"
        android:textColor="@android:color/black"/>

    <ImageButton
        android:id="@+id/list_view_black_list_item_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_clean_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>