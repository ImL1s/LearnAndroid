<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:text="解除安裝"
        android:id="@+id/pop_up_window_app_manager_tv_uninstall"
        android:drawableTop="@drawable/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="啟動"
        android:id="@+id/pop_up_window_app_manager_tv_start"
        android:drawableTop="@drawable/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:text="分享"
        android:id="@+id/pop_up_window_app_manager_tv_share"
        android:drawableTop="@drawable/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"/>

</LinearLayout>