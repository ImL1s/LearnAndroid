<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.safeBodyGuard.activity.AppManagerActivity">

    <TextView
        android:text="軟體管理"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TitleStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="內部剩餘存儲:"
            android:id="@+id/activity_app_manager_tv_inner_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="外部剩餘存儲:"
            android:id="@+id/activity_app_manager_tv_external_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/activity_app_manager_lv_app_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/activity_app_manager_tv_top_title"
            android:background="#ccc"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="硬碟可用"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </FrameLayout>



</LinearLayout>
