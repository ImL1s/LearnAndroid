<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_setting_item_title"
        android:text="自動更新設定"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/tv_setting_item_title"
        android:id="@+id/tv_setting_item_desc"
        android:text="自動更新已關閉"
        android:textColor="#666"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/v_setting_item_arrows"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/arrows_right"/>

    <View
        android:layout_below="@id/tv_setting_item_desc"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

</RelativeLayout>